cat > .gitattributes << 'EOF'
# Auto detect text files
* text=auto

# Text files dengan LF line endings
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf

# LaTeX files
*.tex text eol=lf
*.bib text eol=lf
*.sty text eol=lf
*.cls text eol=lf

# Source files
*.java text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.cs text eol=lf

# Config files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Windows batch files - harus CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files - jangan diubah
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.class binary
*.jar binary
*.war binary
*.ear binary

# Executable scripts
*.sh text eol=lf
EOF